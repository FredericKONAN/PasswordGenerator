{% extends 'base.html.twig' %}

{% block body %}
    <h1> Password generator</h1>

    <form method="get" action="{{ path('app_generate_password') }}">
        <div>
            <label for="Length">Length</label>
            <select name="length" id="Length">
                {% for i in 8..60 %}
                    <option value="{{ i }}"
                           {{ i == 12 ? 'selected' }}
                    >
                        {{ i }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <div>
            <label for="Uppercase_letters">Uppercase Letters</label>
            <input type="checkbox" id="Uppercase_letters" name="uppercase_latters">
        </div>
        <div>
            <label for="digits">Digits</label>
            <input type="checkbox" id="digits" name="digits">
        </div>
        <div>
            <label for="special_characters">Special characters</label>
            <input type="checkbox" id="special_characters" name="special_characters">
        </div>
        <div>
            <button type="submit">Generate password</button>
        </div>
    </form>
    
    <footer>
        <p>
            Built with &hearts; by <a href="#">Fredmoye</a>.
        </p>
    </footer>
{% endblock %}